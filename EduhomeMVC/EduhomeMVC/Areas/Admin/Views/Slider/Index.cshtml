@model List<Slider>

<div class="d-flex justify-content-between">
    <a asp-area="admin" asp-controller="dashboard" asp-action="index" class="btn btn-primary mb-4">Go back</a>
    <a asp-area="admin" asp-controller="slider" asp-action="create" class="btn btn-success mb-4">Create slider</a>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Sliders</h4>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Body
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Slider slider in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/uploads/images/sliders/@slider.Image.Name">
                            </td>
                            <td>
                                @slider.Title
                            </td>
                            <td>
                                @slider.Body
                            </td>
                            <td>
                                <a asp-area="admin" asp-controller="slider" asp-action="details" class="btn btn-primary">Details</a>
                                <a asp-area="admin" asp-controller="slider" asp-action="update" class="btn btn-warning">Update</a>
                                <a asp-area="admin" asp-controller="slider" asp-action="delete" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>